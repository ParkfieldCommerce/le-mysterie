          return a.indexOf(b) == -1;
        }
        if (url.endsWith('/')) {
          url += targetData;
          window.location.href = url;
        } else if (url.endsWith('') && aMissingB(url, 'band-size') && aMissingB(url, 'color') && aMissingB(url, 'cup-size') && aMissingB(url, 'price')) {
