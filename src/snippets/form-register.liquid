<!-- snippets/form-register.liquid -->

<div id="RegisterForm">

  {% form 'create_customer' %}

    {{ form.errors | default_errors }}

    <div class="input-wrapper">
      <input type="text" placeholder="{{ 'account.customer.first_name' | t }}" name="customer[first_name]" id="FirstName"{% if form.first_name %} value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
    </div>
    <div class="input-wrapper">
      <input type="text" placeholder="{{ 'account.customer.last_name' | t }}" name="customer[last_name]" id="LastName"{% if form.last_name %} value="{{ form.last_name }}"{% endif %} autocapitalize="words">
    </div>
    <div class="input-wrapper">
      <input type="email" placeholder="{{ 'form.email' | t }}" name="customer[email]" id="Email"{% if form.errors contains 'email' %} class="error"{% endif %}{% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
    </div>
    <div class="input-wrapper">
      <input type="password" placeholder="{{ 'form.password' | t }}" name="customer[password]" id="CreatePassword"{% if form.errors contains 'password' %} class="error"{% endif %}>
    </div>

    <button type="submit" class="btn primary-btn">{{ 'account.register.submit' | t }}</button>

    <p class="register">{{ 'account.register.already_registered' | t }} {{ 'account.login.title' | t | customer_login_link }}</p>

  {% endform %}

</div>
