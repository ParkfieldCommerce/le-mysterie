<!-- /snippets/form-search.liquid -->

{% assign include_results = '' %}
{% if settings.include_products %}
  {% assign include_results = '' | append: 'product,' %}
{% endif %}
{% if settings.include_articles  %}
  {% assign include_results = '' | append: 'articles,' %}
{% endif %}
{% if settings.include_pages %}
  {% assign include_results = '' | append: 'pages,' %}
{% endif %}
{% assign include_results = include_results | append: '[last]' | remove: ',[last]' | remove: '[last]' %}

<form action="/search" method="get" role="search">
  {% if include_results != '' %}
    <input type="hidden" name="type" value="{{ include_results }}">
  {% endif %}
  <div class="input-wrapper">
    <label for="searchInput">Search Le Myst√®re</label>
    <input id="searchInput" type="text" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'search.title' | t }}" aria-label="{{ 'search.title' | t }}"{% if search_show_button %} autofocus{% endif %}>
    {% if settings.search_show_button %}<button type="submit"><img src="{{ 'search.png' | asset_url }}" alt="Search"></button>{% endif %}
  </div>
</form>
