<div class="main-header">
  <div class="container l">
    <div class="menu-row">
      <div class="logo">
        <img src="{{ logo | img_url:'master' }}" alt="{{ logo_alt }}">
      </div>
      <ul class="main-menu">
        {%- for link in linklists['main-menu'].links -%}
          <li class="menu-item">{{ link.title | link_to: link.url }}</li>
        {%- endfor -%}
      </ul>
      <ul class="menu-options">
        <li>
          <a href="/account">
            <img src="{{ 'ACCOUNT.png' | asset_url }}" alt="My Account">
          </a>
        </li>
        <li>
          <a href="/cart">
            <img src="{{ 'CART.png' | asset_url }}" alt="My Cart">
          </a>
        </li>
        {%- if enable_search == true -%}
          <li>
            <a class="search-btn">
              <img src="{{ 'SEARCH.png' | asset_url }}" alt="Search">
            </a>
          </li>
        {%- endif -%}
      </ul>
    </div>
  </div>
</div>
