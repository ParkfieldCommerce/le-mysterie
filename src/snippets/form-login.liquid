<!-- snippets/form-login.liquid -->

{% form 'customer_login' %}

  {{ form.errors | default_errors }}
  <div class="input-wrapper">
    <input type="email" placeholder="{{ 'form.email' | t }}" name="customer[email]" id="CustomerEmail"{% if form.errors contains 'email' %} class="error"{% endif %} autocorrect="off" autocapitalize="off" autofocus>
  </div>

  {% if form.password_needed %}
    <div class="input-wrapper">
      <input type="password" placeholder="{{ 'form.password' | t }}" value="" name="customer[password]" id="CustomerPassword"{% if form.errors contains 'password' %} class="error"{% endif %}>
    </div>
  {% endif %}

  <button type="submit" class="btn primary-btn">{{ 'account.login.submit' | t }}</button>

  <p class="register">{{ 'account.login.register' | t | customer_register_link }}</p>
  {% if form.password_needed %}
    <p class="fgt-pswd"><a href="/account/login?view=recover">{{ 'account.login.recover' | t }}</a></p>
  {% endif %}

{% endform %}

{% if shop.checkout.guest_login %}
  <hr>
  <h2>{{ 'account.login.guest' | t }}</h2>
  {% form 'guest_login' %}
    <input type="submit" value="{{ 'form.continue' | t }}">
  {% endform %}
{% endif %}
