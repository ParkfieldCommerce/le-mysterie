<!-- /snippets/form-recover.liquid -->

<div id="PasswordRecoverForm">
  {% form 'recover_customer_password' %}

    {{ form.errors | default_errors }}

    {% if form.posted_successfully? == false %}
      <p class="note">{{ 'account.recover.success' | t }}</p>
    {% else %}
      <h4 style="text-align: center;">{{ 'account.recover.message' | t }}</h4>
      <div class="input-wrapper">
        <input type="email" placeholder="{{ 'form.email' | t }}" value="" name="email" id="RecoverEmail" autocorrect="off" autocapitalize="off" autofocus>
      </div>

      <button type="submit" class="btn primary-btn">{{ 'account.recover.submit' | t }}</button>
    {% endif %}
  {% endform %}
</div>
