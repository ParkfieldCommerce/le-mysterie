/* Variables =================================================================*/
@import url('https://fonts.googleapis.com/css?family=Roboto:300');
@import url('https://fonts.googleapis.com/css?family=Roboto:300i');
@import url('https://fonts.googleapis.com/css?family=Roboto');
@import url('https://fonts.googleapis.com/css?family=Roboto:400i');
@import url('https://fonts.googleapis.com/css?family=Roboto:700');
@import url('https://fonts.googleapis.com/css?family=Roboto:700i');

// Colors
$colorBrand: {{ settings.color_brand }};
$colorText: {{ settings.color_text }};
$colorForeground: {{ settings.color_foreground }};
$colorBackground: {{ settings.color_background }};
$colorHighlight: {{ settings.color_highlight }};
$colorAlternate: {{ settings.color_alternate }};
$colorBorder: $colorAlternate;
$adjustAmount: 25%;

// Space & Borders
$spacing: 10px;
$gutter: $spacing*5;
$borderRadius: 2px;
$borderWeight: 2px;
$borderStyle: solid;

// Typography
$fontLight: 300;
$fontNormal: 400;
$fontBold: 700;
$fontFamily: 'Roboto', sans-serif;
$lineHeight: 1.5;
$lineMargin: $spacing*2;

// Font bases
$h1: 2.5rem;
$h2: 2rem;
$h3: 1.75rem;
$h4: 1.25rem;
$h5: 1rem;
$h6: 0.75rem;
$p: 1rem;
$small: 0.625rem;

// Screen Sizes
$s: 600px;
$m: 850px;
$l: 1150px;
$xl: 1450px;

// Transitions
$transitionProperty: all;
$transitionSpeed: 250ms;
$transitionStyle: ease-out;
$transitionDelay: 300ms;
$transition: $transitionProperty $transitionSpeed $transitionStyle;

// Misc.
$logoWidth: {{ settings.logo_width | default: '450' | append: 'px' }};
$prefixes: webkit moz ms spec;

// Brandon font
@font-face {
  font-family: 'BrandonThin';
  src: url({{ 'BrandonGrotesque-Thin.otf' | asset_url }}) format('otf'),
       url({{ 'brandongrotesque-thin-webfont.woff' | asset_url }}) format('woff'),
       url({{ 'brandongrotesque-thin-webfont.woff2' | asset_url }}) format('woff2');
  font-weight: 300;
}

@font-face {
  font-family: 'BrandonLight';
  src: url({{ 'BrandonGrotesque-Light.otf' | asset_url }}) format('otf'),
       url({{ 'brandongrotesque-light-webfont.woff' }}) format('woff'),
       url({{ 'brandongrotesque-light-webfont.woff2' }}) format('woff2');
  font-weight: 400;
}

@font-face {
  font-family: 'BrandonRegular';
  src: url({{ 'BrandonGrotesque-Regular.otf' | asset_url }}) format('otf'),
       url({{ 'brandongrotesque-regular-webfont.woff2' | asset_url }}) format('woff2'),
       url({{ 'brandongrotesque-regular-webfont.woff' | asset_url }}) format('woff'),
       url({{ 'brandongrotesque-regular-webfont.ttf' }}) format('truetype');
  font-weight: 500;
}

@font-face {
  font-family: 'BrandonMedium';
  src: url({{ 'BrandonGrotesque-Medium.otf' | asset_url }}) format('otf'),
       url({{ 'brandongrotesque-medium-webfont.woff' | asset_url }}) format('woff'),
       url({{ 'brandongrotesque-medium-webfont.woff2' | asset_url }}) format('woff2');
  font-weight: 600;
}
