<!-- /snippets/theme-header.liquid -->
{% assign settings = section.settings %}
{% assign enable_banner = settings.enable_banner %}
{% assign banner_text = settings.banner_text %}
{% assign banner_bg = settings.banner_bg %}
{% assign banner_text_col = settings.banner_text_col %}
{% assign header_bg = settings.header_bg %}
{% assign logo = settings.logo %}
{% assign logo_alt = settings.logo_alt %}
{% assign menu_color = settings.menu_color %}
{% assign enable_search = settings.enable_search %}
<style>
  .banner {
    background: {{ banner_bg }};
  }
  .banner p {
    color: {{ banner_text_col }};
  }
  .desktop-header,
  .mobile-header,
  .theme-header,
  .theme-header form {
    background: {{ header_bg }};
  }
  .menu-item a {
    color: {{ menu_color }};
  }
</style>
<header class="theme-header" role="banner">
  {%- include 'banner' -%}
  <div class="container xl">
    {%- include 'header-desktop' -%}
  </div>
  {%- include 'header-mobile' -%}
  {%- include 'form-search' -%}
</header>
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Banner"
      },
      {
        "type": "checkbox",
        "id": "enable_banner",
        "label": "Enable banner",
        "default": true
      },
      {
        "type": "text",
        "id": "banner_text",
        "label": "Banner Text",
        "default": "Free Shipping on orders over $1"
      },
      {
        "type": "color",
        "id": "banner_bg",
        "label": "Banner Background",
        "default": "#eeeeee"
      },
      {
        "type": "color",
        "id": "banner_text_col",
        "label": "Banner Text Color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "color",
        "id": "header_bg",
        "label": "Header Background",
        "default": "#fff"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "text",
        "id": "logo_alt",
        "label": "Alt Tag for Logo",
        "default": "Le Mystere"
      },
      {
        "type": "color",
        "id": "menu_color",
        "label": "Menu Text Color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Search"
      },
      {
        "type": "checkbox",
        "id": "enable_search",
        "label": "Enable Search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "include_products",
        "label": "Include Products",
        "info": "Include Products in search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "include_articles",
        "label": "Include Articles",
        "info": "Include Articles in search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "include_pages",
        "label": "Include Pages",
        "info": "Include Pages in search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_button",
        "label": "Show Button",
        "default": true
      }
    ]
  }
{% endschema %}
